<h1>Edit Car Page</h1>

<%= simple_form_for @car, :html => { :multipart => true } do |f| %>

  <%= f.input :description, as: :text %></br></br>

  <%= f.input :date, as: :date, start_year: Date.today.year - 90, end_year: Date.today.year - 12, discard_day: true, order: [:month, :year] %></br></br>

  <%= f.select :manufacturer_id, @manufacturers %></br></br>

  <%= f.select :modell_id, @modells %></br></br>

  <%= f.select :body_id, @bodies %></br></br>

  <%= f.select :engine_id, @engines %></br></br>

  <%= f.select :speed, @speeds %></br></br>

  <%= f.select :fuel, @fuels %></br></br>

  <%= f.select :fuel_efficiency, @fuel_efficiencies %></br></br>

  <%= f.input :no_index, as: :boolean, checked_value: true, unchecked_value: false %></br></br>

  <%= f.button :submit %></br></br>

<% end %>

<%= link_to "Back", cars_path %>

